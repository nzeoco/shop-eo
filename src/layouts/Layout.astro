---
import MetaPixel from '../components/MetaPixel.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Natural relief for headaches and stress. 100% Pure Peppermint Essential Oil." } = Astro.props;

// TODO: Replace with your actual Meta Pixel ID
const PIXEL_ID = "1234567890"; 
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href="/images/logo.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
        <link rel="preload" as="image" href="/images/hero-hand.jpg" fetchpriority="high" />
		
        <MetaPixel pixelId={PIXEL_ID} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
	</head>
    <body class="bg-nzeo-cream text-nzeo-dark antialiased font-sans pb-24 md:pb-0 selection:bg-nzeo-primary selection:text-white">
		<slot />
	</body>
</html>
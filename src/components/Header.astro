---
import { ShoppingBag } from 'lucide-react';
---

<header class="sticky top-0 z-50 w-full bg-nzeo-cream/90 backdrop-blur-md border-b border-nzeo-primary/5 transition-all duration-300">
    <div class="max-w-7xl mx-auto px-6 md:px-10 h-20 flex items-center justify-between">
        <a href="#" class="block hover:opacity-80 transition-opacity">
            <img 
                src="/images/logo.jpg" 
                alt="NZEO Logo" 
                class="h-12 w-auto mix-blend-multiply object-contain"
            />
        </a>

        <a href="#pricing" class="inline-flex items-center gap-2 bg-nzeo-primary text-white px-6 py-2.5 rounded-full text-xs font-medium tracking-widest uppercase hover:bg-nzeo-secondary transition-all shadow-soft">
            <ShoppingBag className="w-3 h-3" />
            <span>Shop Now</span>
        </a>
    </div>
</header>
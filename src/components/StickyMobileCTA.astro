---
import { Zap } from 'lucide-react';
---

<div 
    id="sticky-cta" 
    class="fixed bottom-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-t border-nzeo-primary/10 shadow-[0_-4px_20px_rgba(0,0,0,0.05)] p-4 md:hidden transform transition-transform duration-500 translate-y-full"
>
    <div class="flex items-center justify-between gap-4">
        <div class="flex flex-col">
            <span class="text-[10px] text-nzeo-gold font-bold uppercase tracking-widest">Selling Fast</span>
            <div class="flex items-baseline gap-1.5">
                <span class="text-sm text-gray-400 font-light">Bundle</span>
                <span class="text-xl font-serif text-nzeo-dark font-medium">RM75</span>
            </div>
        </div>
        
        <a 
            href="https://osini.co/Z/2Y9le1MyNRxd" 
            target="_blank"
            class="flex-1 bg-nzeo-primary text-white py-3.5 px-6 rounded-lg font-medium text-sm tracking-wide text-center flex items-center justify-center gap-2 shadow-lg shadow-nzeo-primary/20 active:scale-95 transition-transform"
        >
            <span>Get The Bundle</span>
            <Zap className="w-4 h-4 text-nzeo-gold fill-current" />
        </a>
    </div>
    <div class="h-1 w-full bg-transparent"></div>
</div>

<script>
    const stickyCta = document.getElementById('sticky-cta');
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', () => {
        const currentScrollY = window.scrollY;
        
        // Show after Hero section (600px)
        if (currentScrollY > 600) {
            stickyCta.classList.remove('translate-y-full');
        } else {
            stickyCta.classList.add('translate-y-full');
        }
        
        lastScrollY = currentScrollY;
    });
</script>
---
import { Quote } from 'lucide-react';

const reviews = [
    {
        name: "Azira",
        age: "28",
        loc: "Selangor",
        text: "I used to rely on painkillers for my migraines. Since I found NZEO, I hardly reach for medicine anymore. It works surprisingly fast."
    },
    {
        name: "Jia Wei",
        age: "22",
        loc: "KL",
        text: "Helps me stay calm and focused when studying for exams. I keep a bottle in my pencil case. It's a lifesaver for late nights."
    },
    {
        name: "Melissa",
        age: "35",
        loc: "JB",
        text: "Massaging NZEO into my muscles helps me recharge. After chasing kids all day, this is my 5 minutes of spa time at home."
    }
];
---

<section class="py-20 bg-nzeo-cream">
    <div class="max-w-6xl mx-auto px-4 md:px-6">
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-nzeo-dark">Real Results</h2>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
            {reviews.map((review) => (
                <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex flex-col h-full">
                    <div class="mb-4 text-nzeo-primary/30">
                        <Quote className="w-8 h-8 fill-current" />
                    </div>
                    <p class="text-nzeo-dark font-medium leading-relaxed flex-grow mb-6">"{review.text}"</p>
                    <div class="border-t border-gray-100 pt-4 mt-auto">
                        <p class="font-bold text-nzeo-primary">{review.name}, {review.age}</p>
                        <p class="text-xs text-gray-500 uppercase tracking-wide">{review.loc}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
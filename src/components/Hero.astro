---
import { Star, ArrowRight } from 'lucide-react';
---

<section class="relative pt-16 pb-24 lg:pt-32 lg:pb-40 overflow-hidden">
    <div class="absolute inset-0 opacity-40 pointer-events-none mix-blend-multiply" 
         style="background-image: radial-gradient(#1B4D3E 0.5px, transparent 0.5px); background-size: 24px 24px;">
    </div>

    <div class="max-w-7xl mx-auto px-6 md:px-10 relative">
        <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
            
            <div class="space-y-10 text-center lg:text-left order-2 lg:order-1 animate-fade-in">
                <div class="space-y-6">
                    <div class="inline-flex items-center gap-2 px-4 py-1.5 border border-nzeo-primary/20 rounded-full bg-white/50 backdrop-blur-sm">
                        <span class="w-2 h-2 rounded-full bg-nzeo-gold"></span>
                        <span class="text-xs font-medium tracking-[0.15em] uppercase text-nzeo-primary">Premium Collection</span>
                    </div>
                    
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-serif font-medium leading-[1.1] text-nzeo-dark">
                        Relief without pills. <br/>
                        <span class="italic text-nzeo-primary relative inline-block">
                            Naturally.
                            <svg class="absolute w-full h-3 -bottom-1 left-0 text-nzeo-gold opacity-60" viewBox="0 0 100 10" preserveAspectRatio="none">
                                <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="2" fill="none" />
                            </svg>
                        </span>
                    </h1>
                    
                    <p class="text-lg md:text-xl text-nzeo-gray font-light leading-relaxed max-w-lg mx-auto lg:mx-0">
                        Experience the cooling embrace of 100% Pure Peppermint Oil. A ritual for headaches, stress, and clarity.
                    </p>
                </div>

                <div class="flex flex-col sm:flex-row items-center gap-6 justify-center lg:justify-start">
                    <a href="#pricing" class="group relative px-10 py-5 bg-nzeo-primary text-white rounded-full font-medium tracking-wide overflow-hidden shadow-soft hover:shadow-lg transition-all duration-300">
                        <span class="relative z-10 flex items-center gap-3">
                            Buy Now
                            <ArrowRight className="w-4 h-4 transition-transform group-hover:translate-x-1" />
                        </span>
                        <div class="absolute inset-0 bg-nzeo-secondary transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-500 ease-out"></div>
                    </a>
                    
                    <div class="flex items-center gap-3 text-sm font-medium text-nzeo-dark/80">
                        <div class="flex text-nzeo-gold">
                            {[1,2,3,4,5].map(() => <Star className="w-4 h-4 fill-current" />)}
                        </div>
                        <span class="font-serif italic">"A daily essential."</span>
                    </div>
                </div>
            </div>

            <div class="relative order-1 lg:order-2">
                <div class="relative z-10 rounded-[2rem] overflow-hidden shadow-2xl aspect-[4/5] lg:aspect-square group border border-white/50">
                    <img 
                        src="/images/hero-hand.jpg" 
                        alt="Hand holding NZEO Peppermint Oil" 
                        width="800"
                        height="1000"
                        fetchpriority="high"
                        loading="eager"
                        decoding="async"
                        class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105"
                    />
                    <div class="absolute inset-0 bg-gradient-to-tr from-nzeo-primary/20 via-transparent to-transparent opacity-60"></div>
                </div>
                
                <div class="absolute -top-10 -right-10 w-64 h-64 bg-nzeo-gold/10 rounded-full blur-3xl -z-10"></div>
                <div class="absolute -bottom-10 -left-10 w-64 h-64 bg-nzeo-primary/10 rounded-full blur-3xl -z-10"></div>
                
                <div class="absolute bottom-8 left-8 bg-white/90 backdrop-blur-md p-5 rounded-xl shadow-soft border border-white/50 animate-subtle-float hidden md:block">
                    <p class="text-nzeo-primary font-serif font-bold text-3xl">100%</p>
                    <p class="text-[10px] text-nzeo-dark font-bold uppercase tracking-widest mt-1">Pure Mentha Piperita</p>
                </div>
            </div>

        </div>
    </div>
</section>